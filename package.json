{
    "name": "todo_js",
    "version": "1.0.14",
    "description": "Painel de Tarefas",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "clean": "rimraf dist",
        "build": "npm run clean && electron-builder --win --x64"
    },
    "keywords": [],
    "author": "Kevyn Melo",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "better-sqlite3": "^11.9.1"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.7.2",
        "electron": "^32.1.2",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9",
        "rimraf": "^6.0.1"
    },
    "build": {
        "appId": "com.example.todojs",
        "productName": "Painel de Tarefas",
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "assets/**/*"
        ]
    }
}
